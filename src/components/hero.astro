---
import { Picture } from "astro:assets";
import heroImage from "assets/desk3.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block -mr-5">
    <Picture
      src={heroImage}
      alt="Illustration of a computer on a desk"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Building the Modern Web
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Our agency is specialized in building modern full-stack web applications
      using the latest technologies. We build websites, web applications, server
      backends, and mobile apps that are fast, secure, and scalable.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/contact"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:conversation" />
        Contact Us
      </Link>
      <Link
        size="lg"
        style="outline"
        href="/about"
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-5 h-5" name="bx:user-circle" />
        About Us
      </Link>
    </div>
  </div>
</main>
