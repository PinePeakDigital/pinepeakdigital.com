---
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import data from "../process.yaml";
---

<Layout title="Process">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Process</Fragment>
      <Fragment slot="desc">How we take your project from idea to done</Fragment
      >
    </Sectionhead>

    <div>
      {
        data.steps.map((step) => (
          <div class="mt-16">
            <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 ">
              {step.name}
            </h2>
            <p class="mt-4 text-lg text-gray-600 max-w-xl">
              {step.description}
            </p>

            {step.notes && (
              <p class="mt-4 text-gray-600 max-w-xl">{step.notes}</p>
            )}

            {step.deliverables && (
              <div>
                <h3 class="mt-4 text-xl font-semibold">Deliverables</h3>
                <ul class="list-disc">
                  {step.deliverables.map((item) => (
                    <li class="mt-2 ml-4 text-gray-600">{item}</li>
                  ))}
                </ul>
              </div>
            )}
            {step.meeting && (
              <div class="mt-4">
                <h3 class="text-xl font-semibold">Meeting</h3>
                <p class="mt-2 text-gray-600">{step.meeting.time}</p>
                <div class="flex">
                  <div class="flex-1 pr-4">
                    <h4 class="mt-4 text-lg font-semibold">Attendees</h4>
                    <ul class="list-disc">
                      {step.meeting.attendees.map((item) => (
                        <li class="mt-2 ml-4 text-gray-600">{item}</li>
                      ))}
                    </ul>
                  </div>
                  <div class="flex-1 pr-4">
                    <h4 class="mt-4 text-lg font-semibold">Agenda</h4>
                    <ul class="list-disc">
                      {step.meeting.agenda.map((item) => (
                        <li class="mt-2 ml-4 text-gray-600">{item}</li>
                      ))}
                    </ul>
                  </div>
                  <div class="flex-1">
                    <h4 class="mt-4 text-lg font-semibold">Deliverables</h4>
                    <ul class="list-disc">
                      {step.meeting.deliverables.map((item) => (
                        <li class="mt-2 ml-4 text-gray-600">{item}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            )}
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
